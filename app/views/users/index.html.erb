<% if @users.empty? %>
    <p><%= "There are no users to display" %></p>
<% else %>
    <h3>List of all users</h3>
    <% @users.each do |user| %>
        <a href= <%= user_path(id: user.id) %> class="single_user">
        <%= render partial: "shared/user", locals: { user: user } %>
        </a>
      <% end %>
<% end %>