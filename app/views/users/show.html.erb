<% if !@user.kind_of? String %>
    <div id="user-details">
        <img id="user-img" src= <%= @user.photo %> alt="user_image"/>
        <h4><%= @user.name %></h4>
        <p id="post-count">Number of posts: <%= @user.posts_counter %></p>
    </div>
    <div class="box">
        <p>Bio</p> <br>
        <%= @user.bio %>
    </div>
    <% @user.posts.each_with_index do |post, index| %>
    <%= render partial: 'shared/post', locals: { post: post, index: index + 1 } %>
  <% end %>
  <div class="buttons_holder">
        <button id="create_post"><%= link_to 'Create post', new_user_post_path(user_id: @user.id) %></button>
        <% if !@user.posts.empty? %>
            <button id="show_all_posts"><%= link_to 'Show all posts', user_posts_path(user_id: @user.id) %></button>
        <% end %>
    </div> 
<% else %>
    <p><%= @user %>
<% end %>